set fileencodings=ucs-bom,utf-8,cp936,gbk,gb18030,big5,euc-jp,euc-kr,latin1
set encoding=utf-8
set termencoding=utf-8

filetype on
syntax on
set ru
set number
set tabstop=4
set shiftwidth=4
set expandtab
set showmatch
set incsearch
set hlsearch
let python_highlight_all=1

colorscheme lucius
LuciusWhiteHighContrast
set t_Co=256

set noai
set nosi
autocmd bufread,bufnewfile * set inde=
